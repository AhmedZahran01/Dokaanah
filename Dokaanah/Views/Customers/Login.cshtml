    <!-- =====================================[BreadCrumb Section]======================================================= -->

    <div class="container mt-5 mb-5">
        <div class="accountt-head d-flex justify-content-between">
            <h1>Account</h1>
            <a href="#" class="log_out_account text-decoration-none">Log out</a>
        </div>
        <h4 class="mt-3 mt-md-2"> Mohamed , <span class="text-secondary">mohamed@gmail.com</span></h4>
        <hr class="mt-4 row col-12 col-lg-7">



        <div class="mt-2 col-12 col-lg-9">
            <div class="btn-group" role="group" aria-label="Basic example">
                <a class="btn  active" id="ordersBtn" onclick="showOrders()">My Orders</a>
                <a class="btn " id="accountInfoBtn" onclick="showAccountInfo()">Account Info</a>
            </div>
            <div id="orders" class="border-custom mt-5 col-12 col-lg-9">
                <h4>Order List</h4>
                <div class="order-div-list mt-5">
                    <div class="card-body cartBody">
                        <div class="d-flex align-items-center bg-light p-4 rounded-4">
                            <div class="productImage">
                                <img src="~/images/prod/12.jpg" style="width: 90px; height: 90px; border-radius: 50%;"
                                     alt="Product Image" />
                            </div>
                            <div class="ms-3">
                                <h5 class="productName">Shirt</h5>
                                <p class="price">$19.99</p>
                                <div class="color" style="background-color: #000;"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="accountinfo" class="hidden-class-info mt-5 col-12 col-lg-9">
                <h2 class="mb-3">Account Information</h2>
                <form>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" placeholder="Email">
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" placeholder="name">
                    </div>
                    <button type="submit" class="btn btn-dark" aria-label="Update Info">Update Info</button>
                </form>
            </div>
        </div>
    </div>

    <!-- ==========================================[Account]================================================== -->
   



    <script>
        function showOrders() {
            document.getElementById("orders").style.display = "block";
            document.getElementById("accountinfo").style.display = "none";
            document.getElementById("ordersBtn").classList.add("active");
            document.getElementById("accountInfoBtn").classList.remove("active");
        }

        function showAccountInfo() {
            document.getElementById("orders").style.display = "none";
            document.getElementById("accountinfo").style.display = "block";
            document.getElementById("ordersBtn").classList.remove("active");
            document.getElementById("accountInfoBtn").classList.add("active");
        }

        showOrders();
    </script>

